@page
@model EgdeBookingSystem.Pages.Equipments.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "_Layout";
}

<h1>Edit</h1>

<h4>Equipment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Equipment.ID" />
            <div class="form-group">
                <label asp-for="Equipment.Name" class="control-label"></label>
                <input asp-for="Equipment.Name" class="form-control" />
                <span asp-validation-for="Equipment.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Equipment.Info" class="control-label"></label>
                <input asp-for="Equipment.Info" class="form-control" />
                <span asp-validation-for="Equipment.Info" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Equipment.Category" class="control-label"></label>
                <select asp-for="Equipment.Category" asp-items="Model.Categories">
                    <option value="">  </option>
                </select>
                <span asp-validation-for="Equipment.Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Equipment.Location" class="control-label"></label>
                <select asp-for="Equipment.Location" asp-items="Model.Locations">
                    <option value="">  </option>
                </select>
                <span asp-validation-for="Equipment.Category" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Equipment.Booked" /> @Html.DisplayNameFor(model => model.Equipment.Booked)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
